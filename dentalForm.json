{
  "id": "dental-form-1",
  "translationKey": "forms.dental.title",
  "descriptionKey": "forms.dental.description",
  "version": "1.0",
  "isDefault": true,
  "questions": [
    {
      "id": "q1",
      "type": "conditional-checkbox",
      "titleKey": "questions.medical.disease",
      "descriptionKey": "questions.medical.disease_description",
      "required": true,
      "primaryQuestion": {
        "type": "yes-no",
        "titleKey": "questions.medical.have_disease"
      },
      "conditionalOptions": {
        "showWhen": "yes",
        "promptKey": "questions.medical.specify_disease",
        "options": [
          { "key": "options.disease.cardiac", "allowText": true },
          { "key": "options.disease.neurologic", "allowText": true },
          { "key": "options.disease.renal", "allowText": true },
          { "key": "options.disease.digestive", "allowText": true },
          { "key": "options.disease.endocrinologic", "allowText": true, "subtext": "diabète, thyroïde..." },
          { "key": "options.disease.hematologic", "allowText": true },
          { "key": "options.disease.immunodeficit", "allowText": true },
          { "key": "options.disease.infectious", "allowText": true, "subtext": "hépatite" },
          { "key": "options.disease.other", "allowText": true }
        ]
      }
    },
    {
      "id": "q2",
      "type": "conditional-checkbox",
      "titleKey": "questions.medical.allergies",
      "required": true,
      "primaryQuestion": {
        "type": "yes-no",
        "titleKey": "questions.medical.allergic"
      },
      "conditionalOptions": {
        "showWhen": "yes",
        "promptKey": "questions.medical.specify_allergies",
        "options": [
          { "key": "options.allergy.penicillin" },
          { "key": "options.allergy.latex" },
          { "key": "options.allergy.iodine" },
          { "key": "options.allergy.anesthetics" },
          { "key": "options.allergy.other", "allowText": true }
        ]
      }
    },
    {
      "id": "q3",
      "type": "conditional-text",
      "titleKey": "questions.medical.medication",
      "required": true,
      "primaryQuestion": {
        "type": "yes-no",
        "titleKey": "questions.medical.take_medication"
      },
      "conditionalOptions": {
        "showWhen": "yes",
        "promptKey": "questions.medical.specify_medication"
      }
    },
    {
      "id": "q4",
      "type": "checkbox",
      "titleKey": "questions.medical.specific_medications",
      "required": false,
      "options": [
        { "key": "options.medication.bisphosphonates" },
        { "key": "options.medication.anticoagulants", "allowText": true }
      ]
    },
    {
      "id": "q5",
      "type": "conditional-text",
      "titleKey": "questions.medical.smoking",
      "required": true,
      "primaryQuestion": {
        "type": "yes-no",
        "titleKey": "questions.medical.smoker"
      },
      "conditionalOptions": {
        "showWhen": "yes",
        "promptKey": "questions.medical.cigarettes_per_day"
      }
    },
    {
      "id": "q6",
      "type": "conditional-text",
      "titleKey": "questions.medical.pregnant",
      "required": true,
      "primaryQuestion": {
        "type": "yes-no",
        "titleKey": "questions.medical.are_pregnant"
      },
      "conditionalOptions": {
        "showWhen": "yes",
        "promptKey": "questions.medical.pregnant_since"
      }
    },
    {
      "id": "q7",
      "type": "multiple-choice",
      "titleKey": "questions.medical.nursing",
      "required": true,
      "options": [
        { "key": "option.medical.yes" },
        { "key": "option.medical.no" }
      ]
    },
    {
      "id": "q8",
      "type": "conditional-text",
      "titleKey": "questions.medical.additional_info",
      "descriptionKey": "questions.medical.additional_info_description",
      "required": false,
      "primaryQuestion": {
        "type": "yes-no",
        "titleKey": "questions.medical.additional_info_question"
      },
      "conditionalOptions": {
        "showWhen": "yes",
        "promptKey": "questions.medical.additional_info_detail"
      }
    }
  ]
}
