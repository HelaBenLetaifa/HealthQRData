{
  "id": "dental-form-1",
  "translationKey": "forms.dental.title",
  "descriptionKey": "forms.dental.description",
  "version": "1.0",
  "isDefault": true,
  "questions": [
    {
      "id": "q1",
      "type": "conditional-checkbox",
      "titleKey": "questions.medical.disease",
      "descriptionKey": "questions.medical.disease_description",
      "required": true,
      "primaryQuestion": {
        "type": "yes-no",
        "titleKey": "questions.medical.have_disease"
      },
      "conditionalOptions": {
        "showWhen": "yes",
        "promptKey": "questions.medical.specify_disease",
        "options": [
          { "key": "options.disease.cardiac", "allowText": true },
          { "key": "options.disease.neurologic", "allowText": true },
          { "key": "options.disease.renal", "allowText": true },
          { "key": "options.disease.digestive", "allowText": true },
          { "key": "options.disease.endocrinologic", "allowText": true },
          { "key": "options.disease.hematologic", "allowText": true },
          { "key": "options.disease.immunodeficit", "allowText": true },
          { "key": "options.disease.infectious", "allowText": true },
          { "key": "options.disease.other", "allowText": true }
        ]
      }
    },
    {
      "id": "q2",
      "type": "conditional-checkbox",
      "titleKey": "questions.medical.allergies",
      "required": true,
      "primaryQuestion": {
        "type": "yes-no",
        "titleKey": "questions.medical.allergic"
      },
      "conditionalOptions": {
        "showWhen": "yes",
        "promptKey": "questions.medical.specify_allergies",
        "options": [
          { "key": "options.allergies.penicillin" },
          { "key": "options.allergies.latex" },
          { "key": "options.allergies.iodine" },
          { "key": "options.allergies.anesthetics" },
          { "key": "options.allergies.other", "allowText": true }
        ]
      }
    },
    {
      "id": "q3",
      "type": "conditional-text",
      "titleKey": "questions.medical.medication",
      "required": true,
      "primaryQuestion": {
        "type": "yes-no",
        "titleKey": "questions.medical.take_medication"
      },
      "conditionalOptions": {
        "showWhen": "yes",
        "promptKey": "questions.medical.specify_medication",
        "multiline": true
      }
    },
    {
      "id": "q4",
      "type": "conditional-checkbox",
      "titleKey": "questions.medical.specific_medications",
      "required": false,
      "primaryQuestion": {
        "type": "yes-no",
        "titleKey": "questions.medical.have_specific_medications"
      },
      "conditionalOptions": {
        "showWhen": "yes",
        "promptKey": "questions.medical.specify_medications",
        "options": [
          { "key": "options.medication.bisphosphonates" },
          { "key": "options.medication.anticoagulants", "allowText": true }
        ]
      }
    },
    {
      "id": "q5",
      "type": "conditional-text",
      "titleKey": "questions.medical.smoking",
      "required": true,
      "primaryQuestion": {
        "type": "yes-no",
        "titleKey": "questions.medical.smoker"
      },
      "conditionalOptions": {
        "showWhen": "yes",
        "promptKey": "questions.medical.cigarettes_per_day",
        "placeholder": "Nombre de cigarettes par jour"
      }
    },
    {
      "id": "q6",
      "type": "conditional-checkbox",
      "titleKey": "questions.medical.pregnancy_nursing",
      "required": true,
      "primaryQuestion": {
        "type": "yes-no",
        "titleKey": "questions.medical.pregnancy_or_breastfeeding_question"
      },
      "conditionalOptions": {
        "showWhen": "yes",
        "promptKey": "questions.medical.specify_situation",
        "options": [
          { 
            "key": "options.pregnancy.currently_pregnant",
            "allowText": true,
            "textPromptKey": "questions.medical.pregnant_since"
          },
          { 
            "key": "options.pregnancy.currently_breastfeeding"
          }
        ]
      }
    },
    {
      "id": "q7",
      "type": "conditional-text",
      "titleKey": "questions.dental.concerns",
      "required": false,
      "primaryQuestion": {
        "type": "yes-no",
        "titleKey": "questions.dental.concerns"
      },
      "conditionalOptions": {
        "showWhen": "yes",
        "promptKey": "questions.dental.concerns_description",
        "multiline": true
      }
    },
    {
      "id": "q8",
      "type": "conditional-checkbox",
      "titleKey": "questions.clinic.discovery",
      "required": false,
      "primaryQuestion": {
        "type": "yes-no",
        "titleKey": "questions.clinic.how_discover"
      },
      "conditionalOptions": {
        "showWhen": "yes",
        "promptKey": "questions.clinic.specify_discovery",
        "options": [
          { 
            "key": "options.discovery.dentist",
            "allowText": true
          },
          { 
            "key": "options.discovery.website",
            "allowText": true
          },
          { 
            "key": "options.discovery.other",
            "allowText": true
          }
        ]
      }
    }
  ]
}
